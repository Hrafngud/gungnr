# Backend / Compose defaults
APP_ENV=local
PORT=8080
DATABASE_URL=postgres://notes:notes@db:5432/notes?sslmode=disable
DB_MAX_OPEN_CONNS=20
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME_MIN=30
CORS_ALLOWED_ORIGINS=http://localhost:4173,http://127.0.0.1:4173,http://localhost:5173,http://127.0.0.1:5173
SESSION_SECRET=replace-with-long-random-string
SESSION_TTL_HOURS=12
COOKIE_DOMAIN=

# GitHub OAuth (required for login)
GITHUB_CLIENT_ID=your-client-id
GITHUB_CLIENT_SECRET=your-client-secret
GITHUB_CALLBACK_URL=http://localhost:8080/auth/callback

# Optional access allowlists (blank = allow any authenticated user)
GITHUB_ALLOWED_USERS=
GITHUB_ALLOWED_ORG=

# Template flow defaults (can be overridden via UI later)
GITHUB_TOKEN=
GITHUB_TEMPLATE_OWNER=Hrafngud
GITHUB_TEMPLATE_REPO=go-ground
GITHUB_REPO_OWNER=
GITHUB_REPO_PRIVATE=true
TEMPLATES_DIR=/templates

# Tunnel + domain settings (can be set in UI)
DOMAIN=
CLOUDFLARED_CONFIG=~/.cloudflared/config.yml
CLOUDFLARED_TUNNEL_NAME=
CLOUDFLARED_DIR=/home/user/.cloudflared

# Database
POSTGRES_USER=notes
POSTGRES_PASSWORD=notes
POSTGRES_DB=notes
DB_PORT=5432

# Frontend
VITE_API_BASE_URL=/
WEB_PORT=4173

# API exposed port
API_PORT=8080
